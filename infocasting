        </header>
        
        <!-- Main Content -->
        <main class="main-content">
            <!-- Home Section -->
            <section id="homeSection" class="section active">
                <div class="section-header">
                    <h2>Dashboard</h2>
                    <p>Manage your broadcasts and view stats</p>
                </div>
                
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon primary">
                            <i class="fas fa-bullhorn"></i>
                        </div>
                        <h3 id="statTotal">0</h3>
                        <p>Total Broadcasts</p>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon success">
                            <i class="fas fa-eye"></i>
                        </div>
                        <h3 id="statActive">0</h3>
                        <p>Active Now</p>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon warning">
                            <i class="fas fa-clock"></i>
                        </div>
                        <h3 id="statExpired">0</h3>
                        <p>Expired</p>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon danger">
                            <i class="fas fa-hdd"></i>
                        </div>
                        <h3 id="statStorage">0 KB</h3>
                        <p>Storage Used</p>
                    </div>
                </div>
                
                <div class="quick-actions">
                    <div class="action-card" onclick="navigateTo('create')">
                        <div class="action-icon">
                            <i class="fas fa-plus"></i>
                        </div>
                        <div class="action-content">
                            <h3>Create Broadcast</h3>
                            <p>Send a new announcement</p>
                        </div>
                    </div>
                    
                    <div class="action-card" onclick="navigateTo('broadcasts')">
                        <div class="action-icon" style="background: var(--success);">
                            <i class="fas fa-list"></i>
                        </div>
                        <div class="action-content">
                            <h3>View All</h3>
                            <p>See all broadcasts</p>
                        </div>
                    </div>
                    
                    <div class="action-card" onclick="exportData()">
                        <div class="action-icon" style="background: var(--warning);">
                            <i class="fas fa-download"></i>
                        </div>
                        <div class="action-content">
                            <h3>Export Data</h3>
                            <p>Backup all broadcasts</p>
                        </div>
                    </div>
                    
                    <div class="action-card" onclick="navigateTo('storage')">
                        <div class="action-icon" style="background: var(--danger);">
                            <i class="fas fa-database"></i>
                        </div>
                        <div class="action-content">
                            <h3>Storage</h3>
                            <p>Manage your data</p>
                        </div>
                    </div>
                </div>
                
                <div class="section-header">
                    <h2>Recent Broadcasts</h2>
                </div>
                
                <div id="recentBroadcasts" class="broadcasts-list">
                    <!-- Recent broadcasts will be loaded here -->
                </div>
            </section>
            
            <!-- Create Section -->
            <section id="createSection" class="section">
                <div class="section-header">
                    <h2>Create Broadcast</h2>
                    <p>Send a new announcement to your system</p>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Title *</label>
                    <input type="text" id="broadcastTitle" class="form-input" placeholder="Enter broadcast title" maxlength="100">
                </div>
                
                <div class="form-group">
                    <label class="form-label">Type</label>
                    <select id="broadcastType" class="form-select">
                        <option value="announcement">游닉 Announcement</option>
                        <option value="alert">丘멆잺 Alert</option>
                        <option value="maintenance">游댢 Maintenance</option>
                        <option value="update">游댃 Update</option>
