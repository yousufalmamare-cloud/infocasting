                <span>Broadcasts</span>
            </button>
            <button class="nav-btn" data-section="storage">
                <i class="fas fa-database"></i>
                <span>Storage</span>
            </button>
            <button class="nav-btn" data-section="settings">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
            </button>
        </nav>
        
        <!-- Install Prompt -->
        <div class="install-prompt" id="installPrompt">
            <i class="fas fa-download" style="font-size: 1.5rem;"></i>
            <div style="flex: 1;">
                <h3 style="margin-bottom: 0.25rem;">Install InfoCast</h3>
                <p style="font-size: 0.875rem; opacity: 0.9;">Install this app on your device for quick access</p>
            </div>
            <button class="btn btn-primary" onclick="installApp()" style="padding: 0.5rem 1rem;">
                Install
            </button>
            <button class="icon-btn" onclick="hideInstallPrompt()" style="background: rgba(255,255,255,0.1); color: white;">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    
    <!-- Broadcast Detail Modal -->
    <div class="modal" id="broadcastModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 style="margin: 0;">Broadcast Details</h2>
                <button class="icon-btn" onclick="closeModal('broadcastModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="broadcastModalContent">
                <!-- Content will be loaded dynamically -->
            </div>
            <div class="modal-actions">
                <button class="btn btn-secondary" onclick="closeModal('broadcastModal')">
                    <i class="fas fa-times"></i> Close
                </button>
                <button class="btn btn-primary" onclick="editBroadcast()" id="editBroadcastBtn">
                    <i class="fas fa-edit"></i> Edit
                </button>
            </div>
        </div>
    </div>
    
    <!-- Clear All Modal -->
    <div class="modal" id="clearAllModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 style="margin: 0; color: var(--danger);">
                    <i class="fas fa-exclamation-triangle"></i> Warning
                </h2>
            </div>
            <div class="modal-body">
                <p style="margin-bottom: 1rem;">This will permanently delete ALL data including:</p>
                <ul style="margin-left: 1.5rem; margin-bottom: 1rem; color: var(--danger);">
                    <li>All broadcasts</li>
                    <li>All drafts</li>
                    <li>Export history</li>
                    <li>Settings</li>
                </ul>
                <p><strong>This action cannot be undone!</strong></p>
            </div>
            <div class="modal-actions">
                <button class="btn btn-secondary" onclick="closeModal('clearAllModal')">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button class="btn btn-danger" onclick="clearAllData()">
                    <i class="fas fa-trash"></i> Delete Everything
                </button>
            </div>
        </div>
    </div>
    
    <!-- Toast Container -->
    <div id="toastContainer"></div>
    
    <!-- Inline JavaScript -->
    <script>
        // ============================================
        // APP STATE & CONFIGURATION
        // ============================================
        const APP_CONFIG = {
            name: 'InfoCast',
            version: '1.0.0',
            storageLimit: 5 * 1024 * 1024, // 5MB
            autoSaveInterval: 30000, // 30 seconds
            checkExpiryInterval: 60000 // 1 minute
        };
        
        // Storage keys
        const STORAGE_KEYS = {
            BROADCASTS: 'infocast_broadcasts_v2',
            DRAFTS: 'infocast_drafts_v2',
            SETTINGS: 'infocast_settings_v2',
            EXPORTS: 'infocast_exports_v2',
            STATS: 'infocast_stats_v2'
        };
        
        // App state
        let appState = {
            broadcasts: [],
            drafts: [],
            exports: [],
            settings: {},
            currentSection: 'home',
            selectedUrgency: 'low',
            tags: [],
            searchQuery: '',
            currentFilter: 'all',
            deferredPrompt: null,
            editBroadcastId: null
        };
        
        // ============================================
        // APP INITIALIZATION
        // ============================================
        
        document.addEventListener('DOMContentLoaded', function() {
            initializeApp();
        });
        
        function initializeApp() {
            // Load all data
            loadAllData();
            
            // Setup event listeners
            setupEventListeners();
            
            // Setup service worker for PWA
            setupServiceWorker();
            
            // Setup auto-save and auto-check
            setupAutoFeatures();
            
            // Check for updates
            checkForUpdates();
            
            // Show welcome for first time users
            if (appState.broadcasts.length === 0 && !localStorage.getItem('infocast_welcome_shown')) {
                setTimeout(showWelcomeMessage, 1000);
                localStorage.setItem('infocast_welcome_shown', 'true');
            }
        }
        
        function loadAllData() {
            // Load broadcasts
            const savedBroadcasts = localStorage.getItem(STORAGE_KEYS.BROADCASTS);
            appState.broadcasts = savedBroadcasts ? JSON.parse(savedBroadcasts) : [];
            
            // Load drafts
            const savedDrafts = localStorage.getItem(STORAGE_KEYS.DRAFTS);
            appState.drafts = savedDrafts ? JSON.parse(savedDrafts) : [];
            
            // Load exports
            const savedExports = localStorage.getItem(STORAGE_KEYS.EXPORTS);
            appState.exports = savedExports ? JSON.parse(savedExports) : [];
            
            // Load settings
            const savedSettings = localStorage.getItem(STORAGE_KEYS.SETTINGS);
            appState.settings = savedSettings ? JSON.parse(savedSettings) : getDefaultSettings();
            
            // Apply settings
            applySettings();
            
            // Update UI
            updateDashboard();
            displayRecentBroadcasts();
            updateStorageInfo();
        }
        
        function getDefaultSettings() {
            return {
                enableSounds: true,
                enableAlerts: true,
                darkMode: window.matchMedia('(prefers-color-scheme: dark)').matches,
                autoSave: true,
                autoClean: false,
                notifications: true
            };
        }
        
        function applySettings() {
            // Apply dark mode
            if (appState.settings.darkMode) {
                document.documentElement.setAttribute('data-theme', 'dark');
            } else {
                document.documentElement.removeAttribute('data-theme');
            }
            
            // Update toggle states
            document.getElementById('soundToggle').checked = appState.settings.enableSounds;
            document.getElementById('alertToggle').checked = appState.settings.enableAlerts;
            document.getElementById('darkModeToggle').checked = appState.settings.darkMode;
            document.getElementById('autosaveToggle').checked = appState.settings.autoSave;
            document.getElementById('autocleanToggle').checked = appState.settings.autoClean;
        }
        
        // ============================================
        // EVENT LISTENERS
        // ============================================
        
        function setupEventListeners() {
            // Navigation
            document.querySelectorAll('.nav-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const section = this.getAttribute('data-section');
                    navigateTo(section);
                });
            });
            
            // Urgency buttons
            document.querySelectorAll('.urgency-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.urgency-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    appState.selectedUrgency = this.getAttribute('data-level');
                });
            });
            
            // Filter buttons
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    appState.currentFilter = this.getAttribute('data-filter');
                    displayAllBroadcasts();
                });
            });
            
            // Search
            document.getElementById('broadcastSearch').addEventListener('input', function() {
                appState.searchQuery = this.value.toLowerCase();
                displayAllBroadcasts();
            });
            
            // Tags input
            document.getElementById('tagsInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && this.value.trim()) {
                    e.preventDefault();
                    addTag(this.value.trim());
                    this.value = '';
                }
            });
            
            // Character count
            document.getElementById('broadcastMessage').addEventListener('input', updateCharCount);
            
            // Header buttons
            document.getElementById('refreshBtn').addEventListener('click', refreshData);
            document.getElementById('settingsBtn').addEventListener('click', () => navigateTo('settings'));
            
            // Import file
            document.getElementById('importFile').addEventListener('change', handleImportFile);
            
            // PWA install prompt
            window.addEventListener('beforeinstallprompt', (e) => {
                e.preventDefault();
                appState.deferredPrompt = e;
                showInstallPrompt();
            });
            
            // Online/Offline detection
            window.addEventListener('online', updateOnlineStatus);
            window.addEventListener('offline', updateOnlineStatus);
            
            // Prevent accidental refresh
            window.addEventListener('beforeunload', (e) => {
                if (appState.broadcasts.length > 0) {
                    e.preventDefault();
                    e.returnValue = '';
                }
            });
        }
        
        // ============================================
        // NAVIGATION
        // ============================================
        
        function navigateTo(section) {
            // Update active section
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
            
            document.getElementById(section + 'Section').classList.add('active');
            document.querySelector(`[data-section="${section}"]`).classList.add('active');
            
            appState.currentSection = section;
            
            // Update content based on section
            switch(section) {
                case 'home':
                    updateDashboard();
                    displayRecentBroadcasts();
                    break;
                case 'broadcasts':
                    displayAllBroadcasts();
                    break;
                case 'storage':
                    updateStorageInfo();
                    displayExportHistory();
                    break;
            }
            
            // Close search if open
            document.getElementById('broadcastSearch').value = '';
            appState.searchQuery = '';
        }
        
        // ============================================
        // BROADCAST MANAGEMENT
        // ============================================
        
        function saveBroadcast() {
            const title = document.getElementById('broadcastTitle').value.trim();
            const type = document.getElementById('broadcastType').value;
            const message = document.getElementById('broadcastMessage').value.trim();
            const expiry = document.getElementById('expiryDate').value;
            
            if (!title || !message) {
                showToast('Please fill in title and message', 'error');
                return;
            }
            
            const broadcast = {
                id: Date.now(),
                title: title,
                type: type,
                tags: [...appState.tags],
                urgency: appState.selectedUrgency,
                message: message,
                timestamp: new Date().toISOString(),
                created: Date.now(),
                expiry: expiry ? new Date(expiry).getTime() : null,
                status: 'active',
                views: 0,
                edited: false
            };
            
            // Add to broadcasts
            appState.broadcasts.unshift(broadcast);
            
            // Save to storage
            saveToStorage();
            
            // Clear form
            clearForm();
            
            // Update UI
            updateDashboard();
            displayRecentBroadcasts();
            
            // Show success
            showToast('Broadcast saved successfully!', 'success');
            
            // Play sound if enabled
            if (appState.settings.enableSounds && broadcast.urgency === 'high') {
                playAlertSound();
            }
            
            // Navigate to home
            navigateTo('home');
        }
        
        function saveAsDraft() {
            const title = document.getElementById('broadcastTitle').value.trim() || 'Untitled Draft';
            const type = document.getElementById('broadcastType').value;
            const message = document.getElementById('broadcastMessage').value.trim();
            const expiry = document.getElementById('expiryDate').value;
            
            const draft = {
                id: Date.now(),
                title: title,
                type: type,
                tags: [...appState.tags],
                urgency: appState.selectedUrgency,
                message: message,
                timestamp: new Date().toISOString(),
                created: Date.now(),
                expiry: expiry ? new Date(expiry).getTime() : null,
                status: 'draft'
            };
            
            appState.drafts.unshift(draft);
            localStorage.setItem(STORAGE_KEYS.DRAFTS, JSON.stringify(appState.drafts));
            
            clearForm();
            showToast('Draft saved!', 'success');
            navigateTo('home');
        }
        
        function clearForm() {
            document.getElementById('broadcastTitle').value = '';
            document.getElementById('broadcastMessage').value = '';
            document.getElementById('expiryDate').value = '';
            appState.tags = [];
            updateTagsDisplay();
            updateCharCount();
        }
        
        function updateCharCount() {
            const message = document.getElementById('broadcastMessage').value;
            document.getElementById('charCount').textContent = message.length;
        }
        
        function addTag(tag) {
            if (tag && !appState.tags.includes(tag)) {
                appState.tags.push(tag);
                updateTagsDisplay();
            }
        }
        
        function removeTag(index) {
            appState.tags.splice(index, 1);
            updateTagsDisplay();
        }
        
        function updateTagsDisplay() {
            const container = document.getElementById('tagsContainer');
            container.innerHTML = appState.tags.map((tag, i) => `
                <span class="tag">
                    ${tag}
                    <span class="tag-remove" onclick="removeTag(${i})">
                        <i class="fas fa-times"></i>
                    </span>
                </span>
            `).join('');
        }
        
        // ============================================
        // BROADCAST DISPLAY
        // ============================================
        
        function displayRecentBroadcasts() {
            const container = document.getElementById('recentBroadcasts');
            const recent = appState.broadcasts.slice(0, 3);
            
            if (recent.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-bullhorn"></i>
                        <h3>No broadcasts yet</h3>
                        <p>Create your first broadcast to get started</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = recent.map(broadcast => `
                <div class="broadcast-card" onclick="showBroadcastDetail(${broadcast.id})">
                    <div class="broadcast-header">
                        <div class="broadcast-title">${broadcast.title}</div>
                        <div class="broadcast-badge ${broadcast.urgency}">${broadcast.urgency}</div>
                    </div>
                    ${broadcast.tags.length > 0 ? `
                        <div class="broadcast-tags">
                            ${broadcast.tags.map(tag => `<span class="broadcast-tag">${tag}</span>`).join('')}
                        </div>
                    ` : ''}
                    <div class="broadcast-message">${broadcast.message.substring(0, 100)}${broadcast.message.length > 100 ? '...' : ''}</div>
                    <div class="broadcast-footer">
                        <div class="broadcast-type">
                            <i class="fas fa-${getTypeIcon(broadcast.type)}"></i>
                            ${getTypeName(broadcast.type)}
                        </div>
                        <div>${formatDate(broadcast.timestamp)}</div>
                    </div>
                </div>
            `).join('');
        }
        
        function displayAllBroadcasts() {
            const container = document.getElementById('allBroadcasts');
            const emptyState = document.getElementById('emptyBroadcasts');
            
            let broadcasts = [...appState.broadcasts];
            
            // Apply filter
            switch(appState.currentFilter) {
                case 'active':
                    broadcasts = broadcasts.filter(b => 
                        b.status === 'active' && 
                        (!b.expiry || b.expiry > Date.now())
                    );
                    break;
                case 'expired':
                    broadcasts = broadcasts.filter(b => 
                        b.expiry && b.expiry <= Date.now()
                    );
                    break;
                case 'drafts':
                    broadcasts = [...appState.drafts];
                    break;
                case 'urgent':
                    broadcasts = broadcasts.filter(b => b.urgency === 'high');
                    break;
            }
            
            // Apply search
            if (appState.searchQuery) {
                broadcasts = broadcasts.filter(b => 
                    b.title.toLowerCase().includes(appState.searchQuery) ||
                    b.message.toLowerCase().includes(appState.searchQuery) ||
                    b.tags.some(tag => tag.toLowerCase().includes(appState.searchQuery))
                );
            }
            
            if (broadcasts.length === 0) {
                container.innerHTML = '';
                emptyState.style.display = 'block';
                return;
            }
            
            emptyState.style.display = 'none';
            container.innerHTML = broadcasts.map(broadcast => `
                <div class="broadcast-card ${broadcast.urgency === 'high' ? 'urgent' : ''}" onclick="showBroadcastDetail(${broadcast.id}, ${appState.currentFilter === 'drafts'})">
                    <div class="broadcast-header">
                        <div class="broadcast-title">${broadcast.title}</div>
                        <div class="broadcast-badge ${broadcast.urgency}">${broadcast.urgency}</div>
                    </div>
                    ${broadcast.tags.length > 0 ? `
                        <div class="broadcast-tags">
                            ${broadcast.tags.map(tag => `<span class="broadcast-tag">${tag}</span>`).join('')}
                        </div>
                    ` : ''}
                    <div class="broadcast-message">${broadcast.message.substring(0, 100)}${broadcast.message.length > 100 ? '...' : ''}</div>
                    <div class="broadcast-footer">
                        <div class="broadcast-type">
                            <i class="fas fa-${getTypeIcon(broadcast.type)}"></i>
                            ${getTypeName(broadcast.type)}
                            ${broadcast.status === 'draft' ? ' (Draft)' : ''}
                        </div>
                        <div>${formatDate(broadcast.timestamp)}</div>
                    </div>
                </div>
            `).join('');
        }
        
        function showBroadcastDetail(id, isDraft = false) {
            const broadcast = isDraft ? 
                appState.drafts.find(d => d.id === id) : 
                appState.broadcasts.find(b => b.id === id);
            
            if (!broadcast) return;
            
            // Update views if not draft
            if (!isDraft) {
                broadcast.views = (broadcast.views || 0) + 1;
                saveToStorage();
            }
            
            const modalContent = document.getElementById('broadcastModalContent');
            const editBtn = document.getElementById('editBroadcastBtn');
            
            // Hide edit button for drafts (for now)
            editBtn.style.display = isDraft ? 'none' : 'block';
            appState.editBroadcastId = isDraft ? null : id;
            
            modalContent.innerHTML = `
                <h3 style="margin-bottom: 1rem;">${broadcast.title}</h3>
                <div style="display: flex; gap: 0.5rem; margin-bottom: 1rem;">
                    <span class="broadcast-badge ${broadcast.urgency}">${broadcast.urgency} urgency</span>
                    <span class="broadcast-badge" style="background: rgba(37, 99, 235, 0.1); color: var(--primary);">
                        <i class="fas fa-${getTypeIcon(broadcast.type)}"></i> ${getTypeName(broadcast.type)}
                    </span>
                    ${isDraft ? '<span class="broadcast-badge" style="background: rgba(139, 92, 246, 0.1); color: #8b5cf6;">Draft</span>' : ''}
                </div>
                
                ${broadcast.tags.length > 0 ? `
                    <div style="margin-bottom: 1rem;">
                        <strong>Tags:</strong>
                        <div style="display: flex; flex-wrap: wrap; gap: 0.25rem; margin-top: 0.5rem;">
                            ${broadcast.tags.map(tag => `<span class="tag">${tag}</span>`).join('')}
                        </div>
                    </div>
                ` : ''}
                
                <div style="margin-bottom: 1rem;">
                    <strong>Message:</strong>
                    <div style="background: var(--light); padding: 1rem; border-radius: 8px; margin-top: 0.5rem; white-space: pre-wrap;">
                        ${broadcast.message}
                    </div>
                </div>
                
                <div style="display: grid; gap: 0.75rem; background: var(--light); padding: 1rem; border-radius: 8px;">
                    <div style="display: flex; justify-content: space-between;">
                        <span>Created:</span>
                        <strong>${formatDate(broadcast.timestamp)}</strong>
                    </div>
                    ${broadcast.expiry ? `
                        <div style="display: flex; justify-content: space-between;">
                            <span>Expires:</span>
                            <strong>${formatDate(new Date(broadcast.expiry).toISOString())}</strong>
                        </div>
                    ` : ''}
                    ${!isDraft ? `
                        <div style="display: flex; justify-content: space-between;">
                            <span>Views:</span>
                            <strong>${broadcast.views || 0}</strong>
                        </div>
                    ` : ''}
                </div>
            `;
            
            openModal('broadcastModal');
        }
        
        function editBroadcast() {
            if (!appState.editBroadcastId) return;
            
            const broadcast = appState.broadcasts.find(b => b.id === appState.editBroadcastId);
            if (!broadcast) return;
            
            // Navigate to create section with data
            navigateTo('create');
            
            // Fill form with broadcast data
            document.getElementById('broadcastTitle').value = broadcast.title;
            document.getElementById('broadcastType').value = broadcast.type;
            document.getElementById('broadcastMessage').value = broadcast.message;
            document.getElementById('expiryDate').value = broadcast.expiry ? 
                new Date(broadcast.expiry).toISOString().slice(0, 16) : '';
            
            // Set urgency
            document.querySelectorAll('.urgency-btn').forEach(b => b.classList.remove('active'));
            document.querySelector(`.urgency-btn.${broadcast.urgency}`).classList.add('active');
            appState.selectedUrgency = broadcast.urgency;
            
            // Set tags
            appState.tags = [...broadcast.tags];
            updateTagsDisplay();
            updateCharCount();
            
            // Mark for update
            appState.editBroadcastId = broadcast.id;
            
            closeModal('broadcastModal');
            
            showToast('Edit broadcast details and save changes', 'info');
        }
        
        // ============================================
        // STORAGE MANAGEMENT
        // ============================================
        
        function saveToStorage() {
            localStorage.setItem(STORAGE_KEYS.BROADCASTS, JSON.stringify(appState.broadcasts));
            localStorage.setItem(STORAGE_KEYS.DRAFTS, JSON.stringify(appState.drafts));
            localStorage.setItem(STORAGE_KEYS.EXPORTS, JSON.stringify(appState.exports));
            localStorage.setItem(STORAGE_KEYS.SETTINGS, JSON.stringify(appState.settings));
            
            updateDashboard();
            updateStorageInfo();
        }
        
        function updateDashboard() {
            const activeCount = appState.broadcasts.filter(b => 
                b.status === 'active' && 
                (!b.expiry || b.expiry > Date.now())
            ).length;
            
            const expiredCount = appState.broadcasts.filter(b => 
                b.expiry && b.expiry <= Date.now()
            ).length;
            
            // Update stats
            document.getElementById('statTotal').textContent = appState.broadcasts.length;
            document.getElementById('statActive').textContent = activeCount;
            document.getElementById('statExpired').textContent = expiredCount;
            document.getElementById('statStorage').textContent = calculateStorageSize();
        }
        
        function updateStorageInfo() {
            const totalSize = calculateTotalStorageSize();
            const maxSize = APP_CONFIG.storageLimit;
            const percentage = Math.min((totalSize / maxSize) * 100, 100);
            
            // Update storage bar
            document.getElementById('storageFillBar').style.width = `${percentage}%`;
            document.getElementById('storageUsed').textContent = formatBytes(totalSize);
            document.getElementById('storageAvailable').textContent = formatBytes(maxSize - totalSize);
            
            // Update storage stats
            document.getElementById('storageStatTotal').textContent = appState.broadcasts.length;
            document.getElementById('storageStatDrafts').textContent = appState.drafts.length;
            document.getElementById('storageStatExports').textContent = appState.exports.length;
        }
        
        function calculateTotalStorageSize() {
            let total = 0;
            
            // Add size of all stored data
            const keys = [STORAGE_KEYS.BROADCASTS, STORAGE_KEYS.DRAFTS, STORAGE_KEYS.EXPORTS, STORAGE_KEYS.SETTINGS];
            
            keys.forEach(key => {
                const data = localStorage.getItem(key);
                if (data) {
                    total += new Blob([data]).size;
                }
            });
            
            return total;
        }
        
        function calculateStorageSize() {
            const size = calculateTotalStorageSize();
            return formatBytes(size);
        }
        
        function formatBytes(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
        
        // ============================================
        // EXPORT/IMPORT
        // ============================================
        
        function exportData() {
            const exportData = {
                app: APP_CONFIG.name,
                version: APP_CONFIG.version,
                exportedAt: new Date().toISOString(),
                broadcasts: appState.broadcasts,
                drafts: appState.drafts,
                settings: appState.settings
            };
            
            const dataStr = JSON.stringify(exportData, null, 2);
            const dataBlob = new Blob([dataStr], {type: 'application/json'});
            
            // Create download link
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = `infocast-backup-${new Date().toISOString().split('T')[0]}.json`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            // Add to export history
            const exportRecord = {
                id: Date.now(),
                type: 'Full Backup',
                date: new Date().toISOString(),
                size: formatBytes(dataBlob.size)
            };
            
            appState.exports.unshift(exportRecord);
            saveToStorage();
            displayExportHistory();
            
            showToast('Data exported successfully!', 'success');
        }
        
        function importData() {
            document.getElementById('importFile').click();
        }
        
        function handleImportFile(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            const reader = new FileReader();
            reader.onload = function(e) {
                try {
                    const data = JSON.parse(e.target.result);
                    
                    if (!data.broadcasts || !Array.isArray(data.broadcasts)) {
                        throw new Error('Invalid backup file');
                    }
                    
                    // Ask for import type
                    if (confirm('Import broadcasts? This will add them to your existing data.')) {
                        // Merge broadcasts (avoid duplicates by ID)
                        const existingIds = new Set(appState.broadcasts.map(b => b.id));
                        const newBroadcasts = data.broadcasts.filter(b => !existingIds.has(b.id));
                        
                        appState.broadcasts = [...newBroadcasts, ...appState.broadcasts];
                        
                        // Merge drafts if available
                        if (data.drafts && Array.isArray(data.drafts)) {
                            const existingDraftIds = new Set(appState.drafts.map(d => d.id));
                            const newDrafts = data.drafts.filter(d => !existingDraftIds.has(d.id));
                            appState.drafts = [...newDrafts, ...appState.drafts];
                        }
                        
                        // Save and update
                        saveToStorage();
                        displayRecentBroadcasts();
                        
                        showToast(`Imported ${newBroadcasts.length} broadcasts`, 'success');
                    }
                } catch (error) {
                    showToast('Error importing file. Invalid format.', 'error');
                }
            };
            reader.readAsText(file);
            
            // Reset file input
            event.target.value = '';
        }
        
        function displayExportHistory() {
            const container = document.getElementById('exportHistory');
            
            if (appState.exports.length === 0) {
                container.innerHTML = '<div style="color: var(--gray); text-align: center; padding: 2rem;">No exports yet</div>';
                return;
            }
            
            container.innerHTML = appState.exports.slice(0, 5).map(exp => `
                <div class="export-item">
                    <div>
                        <div style="font-weight: 600;">${exp.type}</div>
                        <div style="font-size: 0.875rem; color: var(--gray);">${formatDate(exp.date)}</div>
                    </div>
                    <div style="font-size: 0.875rem; color: var(--gray);">${exp.size}</div>
                </div>
            `).join('');
        }
        
        // ============================================
        // DATA CLEANUP
        // ============================================
        
        function clearExpired() {
            const expiredCount = appState.broadcasts.filter(b => 
                b.expiry && b.expiry <= Date.now()
            ).length;
            
            if (expiredCount === 0) {
                showToast('No expired broadcasts to clear', 'info');
                return;
            }
            
            if (confirm(`Clear ${expiredCount} expired broadcasts?`)) {
                appState.broadcasts = appState.broadcasts.filter(b => 
                    !(b.expiry && b.expiry <= Date.now())
                );
                saveToStorage();
                showToast(`Cleared ${expiredCount} expired broadcasts`, 'success');
            }
        }
        
        function showClearAllModal() {
            openModal('clearAllModal');
        }
        
        function clearAllData() {
            // Clear all data
            appState.broadcasts = [];
            appState.drafts = [];
            appState.exports = [];
            appState.settings = getDefaultSettings();
            
            // Clear localStorage
            Object.values(STORAGE_KEYS).forEach(key => {
                localStorage.removeItem(key);
            });
            
            // Apply settings
            applySettings();
            
            // Update UI
            updateDashboard();
            displayRecentBroadcasts();
            updateStorageInfo();
            displayExportHistory();
            
            // Close modal
            closeModal('clearAllModal');
            
            showToast('All data cleared', 'success');
        }
        
        // ============================================
        // SETTINGS
        // ============================================
        
        function saveSettings() {
            appState.settings = {
                enableSounds: document.getElementById('soundToggle').checked,
                enableAlerts: document.getElementById('alertToggle').checked,
                darkMode: document.getElementById('darkModeToggle').checked,
                autoSave: document.getElementById('autosaveToggle').checked,
                autoClean: document.getElementById('autocleanToggle').checked,
                notifications: true
            };
            
            localStorage.setItem(STORAGE_KEYS.SETTINGS, JSON.stringify(appState.settings));
            applySettings();
            showToast('Settings saved', 'success');
        }
        
        function resetSettings() {
            if (confirm('Reset all settings to defaults?')) {
                appState.settings = getDefaultSettings();
                localStorage.setItem(STORAGE_KEYS.SETTINGS, JSON.stringify(appState.settings));
                applySettings();
                showToast('Settings reset to defaults', 'success');
            }
        }
        
        // ============================================
        // PWA & SERVICE WORKER
        // ============================================
        
        function setupServiceWorker() {
            if ('serviceWorker' in navigator) {
                // Create a simple service worker inline
                const swCode = `
                    self.addEventListener('install', (event) => {
                        event.waitUntil(
                            caches.open('infocast-v1').then((cache) => {
                                return cache.addAll(['./']);
                            })
                        );
                    });
                    
                    self.addEventListener('fetch', (event) => {
                        event.respondWith(
                            caches.match(event.request).then((response) => {
                                return response || fetch(event.request);
                            })
                        );
                    });
                `;
                
                // Create a blob URL for the service worker
                const swBlob = new Blob([swCode], { type: 'application/javascript' });
                const swURL = URL.createObjectURL(swBlob);
                
                // Register the service worker
                navigator.serviceWorker.register(swURL)
                    .then(() => {
                        console.log('Service Worker registered');
                        document.getElementById('appStatus').textContent = 'Ready (Offline)';
                    })
                    .catch(err => {
                        console.log('Service Worker registration failed:', err);
                        document.getElementById('appStatus').textContent = 'Ready (Online)';
                    });
            }
        }
        
        function showInstallPrompt() {
            const prompt = document.getElementById('installPrompt');
            prompt.classList.add('active');
            
            // Auto-hide after 10 seconds
            setTimeout(() => {
                prompt.classList.remove('active');
            }, 10000);
        }
        
        function hideInstallPrompt() {
            document.getElementById('installPrompt').classList.remove('active');
        }
        
        function installApp() {
            if (!appState.deferredPrompt) return;
            
            appState.deferredPrompt.prompt();
            
            appState.deferredPrompt.userChoice.then((choiceResult) => {
                if (choiceResult.outcome === 'accepted') {
                    showToast('App installed successfully!', 'success');
                }
                appState.deferredPrompt = null;
                hideInstallPrompt();
            });
        }
        
        // ============================================
        // AUTO FEATURES
        // ============================================
        
        function setupAutoFeatures() {
            // Auto-save
            if (appState.settings.autoSave) {
                setInterval(() => {
                    saveToStorage();
                    showToast('Auto-saved all data', 'info', 2000);
                }, APP_CONFIG.autoSaveInterval);
            }
            
            // Auto-check expiry
            setInterval(checkExpiredBroadcasts, APP_CONFIG.checkExpiryInterval);
        }
        
        function checkExpiredBroadcasts() {
            let hasExpired = false;
            appState.broadcasts.forEach(broadcast => {
                if (broadcast.expiry && broadcast.expiry <= Date.now() && broadcast.status === 'active') {
                    broadcast.status = 'expired';
                    hasExpired = true;
                }
            });
            
            if (hasExpired && appState.settings.autoClean) {
                appState.broadcasts = appState.broadcasts.filter(b => 
                    !(b.expiry && b.expiry <= Date.now())
                );
                saveToStorage();
                showToast('Auto-cleaned expired broadcasts', 'info');
            } else if (hasExpired) {
                saveToStorage();
            }
        }
        
        // ============================================
        // UTILITY FUNCTIONS
        // ============================================
        
        function updateOnlineStatus() {
            const status = navigator.onLine ? 'Online' : 'Offline';
            document.getElementById('appStatus').textContent = `Ready (${status})`;
            
            if (!navigator.onLine) {
                showToast('You are offline. All data saved locally.', 'warning', 3000);
            }
        }
        
        function refreshData() {
            loadAllData();
            showToast('Data refreshed', 'success');
        }
        
        function checkForUpdates() {
            // Check for app updates
            const lastUpdate = localStorage.getItem('infocast_last_update');
            const currentDate = new Date().toDateString();
            
            if (lastUpdate !== currentDate) {
                localStorage.setItem('infocast_last_update', currentDate);
                // Could check for updates here
            }
        }
        
        function showWelcomeMessage() {
            showToast('Welcome to InfoCast! All data saved internally.', 'success', 5000);
        }
        
        function getTypeIcon(type) {
            const icons = {
                announcement: 'bullhorn',
                alert: 'exclamation-triangle',
                maintenance: 'tools',
                update: 'sync-alt',
                news: 'newspaper',
                meeting: 'users'
            };
            return icons[type] || 'bullhorn';
        }
        
        function getTypeName(type) {
            const names = {
                announcement: 'Announcement',
                alert: 'Alert',
                maintenance: 'Maintenance',
                update: 'Update',
                news: 'News',
                meeting: 'Meeting'
            };
            return names[type] || 'Announcement';
        }
        
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString() + ' ' + date.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        }
        
        function playAlertSound() {
            if (!appState.settings.enableSounds) return;
            
            try {
                // Create a simple beep sound
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.value = 800;
                oscillator.type = 'sine';
                
                gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 1);
                
                oscillator.start(audioContext.currentTime);
                oscillator.stop(audioContext.currentTime + 1);
            } catch (e) {
                // Audio not supported
            }
        }
        
        function openModal(modalId) {
            document.getElementById(modalId).classList.add('active');
        }
        
        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }
        
        function showToast(message, type = 'info', duration = 3000) {
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
                <span>${message}</span>
            `;
            
            document.getElementById('toastContainer').appendChild(toast);
            
            // Remove after duration
            setTimeout(() => {
                toast.style.animation = 'toastIn 0.3s ease reverse';
                setTimeout(() => {
                    toast.remove();
                }, 300);
            }, duration);
        }
        
        // ============================================
        // INITIALIZE ON LOAD
        // ============================================
        
        // Initialize when DOM is loaded
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initializeApp);
        } else {
            initializeApp();
        }
    </script>
</body>
</html>
