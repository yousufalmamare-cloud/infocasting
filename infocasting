                        <i class="fas fa-upload"></i> Import Data
                    </button>
                    <input type="file" id="importFile" accept=".json" style="display: none;">
                    <button class="btn btn-secondary" onclick="clearExpired()">
                        <i class="fas fa-trash"></i> Clear Expired
                    </button>
                    <button class="btn btn-danger" onclick="showClearAllModal()">
                        <i class="fas fa-skull-crossbones"></i> Clear All Data
                    </button>
                </div>
                
                <div class="export-history">
                    <h3 style="margin-bottom: 1rem;">Export History</h3>
                    <div id="exportHistory">
                        <!-- Export history will be loaded here -->
                    </div>
                </div>
            </section>
            
            <!-- Settings Section -->
            <section id="settingsSection" class="section">
                <div class="section-header">
                    <h2>Settings</h2>
