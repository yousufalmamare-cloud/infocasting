            <div style="margin-bottom: 20px;">
                <label for="editMessage">Message</label>
                <textarea id="editMessage" rows="6" style="width: 100%; padding: 10px; border: 2px solid #e5e7eb; border-radius: 8px;"></textarea>
            </div>
            
            <div style="display: flex; gap: 10px; margin-top: 20px;">
                <button onclick="saveEdit()" style="flex: 1; background: var(--primary-color); color: white; border: none; padding: 12px; border-radius: 8px; cursor: pointer; font-weight: 600;">
                    <i class="fas fa-save"></i> Save Changes
                </button>
                <button onclick="closeEditModal()" style="flex: 1; background: #6b7280; color: white; border: none; padding: 12px; border-radius: 8px; cursor: pointer; font-weight: 600;">
                    <i class="fas fa-times"></i> Cancel
                </button>
            </div>
        </div>
    </div>

    <script>
        // ============================================
        // INTERNAL STORAGE SYSTEM
        // ============================================
        
        // Storage keys
        const STORAGE_KEYS = {
            BROADCASTS: 'infocast_broadcasts',
            DRAFTS: 'infocast_drafts',
            SETTINGS: 'infocast_settings',
            EXPORTS: 'infocast_exports',
            STATS: 'infocast_stats'
        };
        
        // App state
        let selectedUrgency = "medium";
        let broadcasts = [];
        let drafts = [];
        let exports = [];
        let currentFilter = "all";
        let searchQuery = "";
        let editingId = null;
        
        // ============================================
        // INITIALIZE APP
        // ============================================
        
        document.addEventListener('DOMContentLoaded', function() {
            loadAllData();
            setupEventListeners();
            updateCharCount();
            updateStorageStatus();
            updateLastSaved();
            
            // Auto-save every 30 seconds
            setInterval(autoSave, 30000);
            
            // Check for expired broadcasts every minute
            setInterval(checkExpiredBroadcasts, 60000);
        });
        
        function loadAllData() {
            // Load broadcasts
            const savedBroadcasts = localStorage.getItem(STORAGE_KEYS.BROADCASTS);
            broadcasts = savedBroadcasts ? JSON.parse(savedBroadcasts) : [];
            
            // Load drafts
            const savedDrafts = localStorage.getItem(STORAGE_KEYS.DRAFTS);
            drafts = savedDrafts ? JSON.parse(savedDrafts) : [];
            
            // Load exports history
            const savedExports = localStorage.getItem(STORAGE_KEYS.EXPORTS);
            exports = savedExports ? JSON.parse(savedExports) : [];
            
            // Display data
            displayBroadcasts();
            displayExportHistory();
            updateStats();
        }
        
        function setupEventListeners() {
            // Urgency buttons
            document.querySelectorAll('.urgency-btn').forEach(button => {
                button.addEventListener('click', function() {
                    document.querySelectorAll('.urgency-btn').forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    selectedUrgency = this.getAttribute('data-level');
                });
            });
            
            // Send broadcast button
            document.getElementById('sendBroadcast').addEventListener('click', saveBroadcast);
            
            // Save draft button
            document.getElementById('saveDraft').addEventListener('click', saveAsDraft);
            
            // Character count
            document.getElementById('broadcastMessage').addEventListener('input', updateCharCount);
            
            // Filter buttons
            document.querySelectorAll('.filter-btn').forEach(button => {
                button.addEventListener('click', function() {
                    document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    currentFilter = this.getAttribute('data-filter');
                    displayBroadcasts();
                });
            });
            
            // Search input
            document.getElementById('searchInput').addEventListener('input', function() {
                searchQuery = this.value.toLowerCase();
                displayBroadcasts();
            });
            
            // Export buttons
            document.getElementById('exportJSON').addEventListener('click', exportToJSON);
            document.getElementById('exportCSV').addEventListener('click', exportToCSV);
            document.getElementById('importData').addEventListener('click', () => document.getElementById('importFile').click());
            document.getElementById('importFile').addEventListener('change', importData);
            
            // Clear buttons
            document.getElementById('clearExpired').addEventListener('click', clearExpired);
            document.getElementById('clearDrafts').addEventListener('click', clearDrafts);
            document.getElementById('clearAll').addEventListener('click', clearAllData);
        }
        
        // ============================================
        // BROADCAST FUNCTIONS
        // ============================================
        
        function saveBroadcast() {
            const title = document.getElementById('broadcastTitle').value.trim();
            const type = document.getElementById('broadcastType').value;
            const tags = document.getElementById('broadcastTags').value.trim();
            const message = document.getElementById('broadcastMessage').value.trim();
            const expiry = document.getElementById('expiryDate').value;
            
            if (!title || !message) {
                showNotification('Please fill in title and message fields', 'error');
                return;
            }
            
            const broadcast = {
                id: Date.now(),
                title: title,
                type: type,
                tags: tags ? tags.split(',').map(t => t.trim()).filter(t => t) : [],
                urgency: selectedUrgency,
                message: message,
                timestamp: new Date().toISOString(),
                created: Date.now(),
                expiry: expiry ? new Date(expiry).getTime() : null,
                status: 'active',
                views: 0,
                edited: false
            };
            
            // Add to broadcasts array
            broadcasts.unshift(broadcast);
            
            // Save to localStorage
            saveToStorage();
            
            // Clear form
            document.getElementById('broadcastTitle').value = '';
            document.getElementById('broadcastTags').value = '';
            document.getElementById('broadcastMessage').value = '';
            document.getElementById('expiryDate').value = '';
            
            // Update UI
            displayBroadcasts();
            updateStats();
            
            // Show notification
            showNotification('Broadcast saved internally!', 'success');
            
            // Play sound for urgent broadcasts
            if (selectedUrgency === 'high') {
                playAlertSound();
            }
        }
        
        function saveAsDraft() {
            const title = document.getElementById('broadcastTitle').value.trim() || 'Untitled Draft';
            const type = document.getElementById('broadcastType').value;
            const tags = document.getElementById('broadcastTags').value.trim();
            const message = document.getElementById('broadcastMessage').value.trim();
            const expiry = document.getElementById('expiryDate').value;
            
            const draft = {
                id: Date.now(),
                title: title,
                type: type,
                tags: tags ? tags.split(',').map(t => t.trim()).filter(t => t) : [],
                urgency: selectedUrgency,
                message: message,
                timestamp: new Date().toISOString(),
                created: Date.now(),
                expiry: expiry ? new Date(expiry).getTime() : null,
                status: 'draft'
            };
            
            // Add to drafts array
            drafts.unshift(draft);
            
            // Save to localStorage
            localStorage.setItem(STORAGE_KEYS.DRAFTS, JSON.stringify(drafts));
            
            // Clear form
            document.getElementById('broadcastTitle').value = '';
            document.getElementById('broadcastTags').value = '';
            document.getElementById('broadcastMessage').value = '';
            document.getElementById('expiryDate').value = '';
            
            // Update UI
            updateStats();
            
            // Show notification
            showNotification('Draft saved!', 'success');
        }
        
        function deleteBroadcast(id, isDraft = false) {
            if (!confirm('Are you sure you want to delete this broadcast?')) return;
            
            if (isDraft) {
                drafts = drafts.filter(d => d.id !== id);
                localStorage.setItem(STORAGE_KEYS.DRAFTS, JSON.stringify(drafts));
            } else {
                broadcasts = broadcasts.filter(b => b.id !== id);
                saveToStorage();
            }
            
            displayBroadcasts();
            updateStats();
            showNotification('Broadcast deleted', 'info');
        }
        
        function editBroadcast(id) {
            const broadcast = broadcasts.find(b => b.id === id);
            if (!broadcast) return;
            
            editingId = id;
            document.getElementById('editTitle').value = broadcast.title;
            document.getElementById('editType').value = broadcast.type;
            document.getElementById('editUrgency').value = broadcast.urgency;
            document.getElementById('editMessage').value = broadcast.message;
            document.getElementById('editModal').style.display = 'flex';
        }
        
        function saveEdit() {
            if (!editingId) return;
            
            const broadcast = broadcasts.find(b => b.id === editingId);
            if (broadcast) {
                broadcast.title = document.getElementById('editTitle').value.trim();
                broadcast.type = document.getElementById('editType').value;
                broadcast.urgency = document.getElementById('editUrgency').value;
                broadcast.message = document.getElementById('editMessage').value.trim();
                broadcast.edited = true;
                broadcast.lastEdited = new Date().toISOString();
                
                saveToStorage();
                displayBroadcasts();
                updateStats();
                showNotification('Broadcast updated!', 'success');
            }
            
            closeEditModal();
        }
        
        function closeEditModal() {
            document.getElementById('editModal').style.display = 'none';
            editingId = null;
        }
        
        function toggleBroadcastStatus(id) {
            const broadcast = broadcasts.find(b => b.id === id);
            if (broadcast) {
                broadcast.status = broadcast.status === 'active' ? 'archived' : 'active';
                saveToStorage();
                displayBroadcasts();
                updateStats();
                showNotification(`Broadcast ${broadcast.status}`, 'info');
            }
        }
        
        function viewBroadcast(id) {
            const broadcast = broadcasts.find(b => b.id === id);
            if (broadcast) {
                broadcast.views = (broadcast.views || 0) + 1;
                saveToStorage();
                
                // Show broadcast in modal
                alert(`Broadcast: ${broadcast.title}\n\n${broadcast.message}`);
            }
        }
        
        // ============================================
        // DISPLAY FUNCTIONS
        // ============================================
        
        function displayBroadcasts() {
            const broadcastList = document.getElementById('broadcastList');
            const emptyState = document.getElementById('emptyState');
            
            let filteredBroadcasts = [...broadcasts];
            
            // Apply filter
            switch(currentFilter) {
                case 'active':
                    filteredBroadcasts = filteredBroadcasts.filter(b => 
                        b.status === 'active' && 
                        (!b.expiry || b.expiry > Date.now())
                    );
                    break;
                case 'expired':
                    filteredBroadcasts = filteredBroadcasts.filter(b => 
                        b.expiry && b.expiry <= Date.now()
                    );
                    break;
                case 'draft':
                    filteredBroadcasts = [...drafts];
                    break;
            }
            
            // Apply search
            if (searchQuery) {
                filteredBroadcasts = filteredBroadcasts.filter(b => 
                    b.title.toLowerCase().includes(searchQuery) ||
                    b.message.toLowerCase().includes(searchQuery) ||
                    b.tags.some(tag => tag.toLowerCase().includes(searchQuery))
                );
            }
            
            if (filteredBroadcasts.length === 0) {
                broadcastList.innerHTML = '';
                emptyState.style.display = 'block';
                return;
            }
            
            emptyState.style.display = 'none';
            broadcastList.innerHTML = '';
            
            filteredBroadcasts.forEach(broadcast => {
                const isDraft = currentFilter === 'draft';
                const isExpired = broadcast.expiry && broadcast.expiry <= Date.now();
                
                const broadcastElement = document.createElement('div');
                broadcastElement.className = 'broadcast-item';
                
                // Set border color based on urgency
                let urgencyColor, urgencyText;
                switch(broadcast.urgency) {
                    case 'high':
                        urgencyColor = 'var(--danger-color)';
                        urgencyText = 'High Urgency';
                        if (!isDraft && !isExpired) broadcastElement.classList.add('urgent-flash');
                        break;
                    case 'medium':
                        urgencyColor = 'var(--warning-color)';
                        urgencyText = 'Medium Urgency';
                        break;
                    case 'low':
                        urgencyColor = 'var(--success-color)';
                        urgencyText = 'Low Urgency';
                        break;
                }
                
                // If expired, override color
                if (isExpired) {
                    urgencyColor = '#9ca3af';
                    urgencyText = 'Expired';
                }
                
                // If draft, override color
                if (isDraft) {
                    urgencyColor = '#8b5cf6';
                    urgencyText = 'Draft';
                }
                
                broadcastElement.style.borderLeftColor = urgencyColor;
                
                // Format type display
                let typeIcon, typeText;
                switch(broadcast.type) {
                    case 'announcement': typeIcon = 'üì¢'; typeText = 'Announcement'; break;
                    case 'alert': typeIcon = '‚ö†Ô∏è'; typeText = 'Alert'; break;
                    case 'maintenance': typeIcon = 'üîß'; typeText = 'Maintenance'; break;
                    case 'update': typeIcon = 'üîÑ'; typeText = 'Update'; break;
                    case 'news': typeIcon = 'üì∞'; typeText = 'News'; break;
                    case 'meeting': typeIcon = 'üë•'; typeText = 'Meeting'; break;
                    case 'deadline': typeIcon = '‚è∞'; typeText = 'Deadline'; break;
                    case 'holiday': typeIcon = 'üéâ'; typeText = 'Holiday'; break;
                }
                
                // Format time
                const time = new Date(broadcast.timestamp);
                const timeString = time.toLocaleString();
                
                // Expiry info
                let expiryInfo = '';
                if (broadcast.expiry) {
                    const expiryDate = new Date(broadcast.expiry);
                    if (isExpired) {
                        expiryInfo = `<div style="font-size: 12px; color: #ef4444; margin-top: 5px;">
                            <i class="fas fa-clock"></i> Expired on ${expiryDate.toLocaleString()}
                        </div>`;
                    } else {
                        expiryInfo = `<div style="font-size: 12px; color: var(--warning-color); margin-top: 5px;">
                            <i class="fas fa-clock"></i> Expires on ${expiryDate.toLocaleString()}
                        </div>`;
                    }
                }
                
                // Edited info
                let editedInfo = '';
                if (broadcast.edited) {
                    editedInfo = `<span style="color: #6b7280; font-size: 12px;">
                        <i class="fas fa-edit"></i> Edited
                    </span>`;
                }
                
                broadcastElement.innerHTML = `
                    <div class="broadcast-header">
                        <div class="broadcast-title">${broadcast.title}</div>
                        <div class="broadcast-actions">
                            ${!isDraft ? `
                                <button class="action-btn" onclick="viewBroadcast(${broadcast.id})" title="View">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="action-btn" onclick="editBroadcast(${broadcast.id})" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="action-btn" onclick="toggleBroadcastStatus(${broadcast.id})" title="${broadcast.status === 'active' ? 'Archive' : 'Activate'}">
                                    <i class="fas ${broadcast.status === 'active' ? 'fa-archive' : 'fa-eye'}"></i>
                                </button>
                            ` : ''}
                            <button class="action-btn" onclick="deleteBroadcast(${broadcast.id}, ${isDraft})" title="Delete">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </div>
                    
                    <div class="broadcast-urgency" style="background: ${urgencyColor}20; color: ${urgencyColor}">
                        ${urgencyText}
                    </div>
                    
                    ${broadcast.tags && broadcast.tags.length > 0 ? `
                        <div class="tag-list">
                            ${broadcast.tags.map(tag => `<span class="tag">${tag}</span>`).join('')}
                        </div>
                    ` : ''}
                    
                    <div class="broadcast-content">
                        ${broadcast.message}
                        ${expiryInfo}
                    </div>
                    
                    <div class="broadcast-footer">
                        <div class="broadcast-type">
                            ${typeIcon} ${typeText}
                            ${editedInfo}
                            ${broadcast.views > 0 ? `<span style="margin-left: 10px; color: #6b7280;"><i class="fas fa-eye"></i> ${broadcast.views}</span>` : ''}
                        </div>
                        <div class="broadcast-time">
                            <i class="far fa-clock"></i> ${timeString}
                        </div>
                    </div>
                `;
                
                broadcastList.appendChild(broadcastElement);
            });
        }
        
        // ============================================
        // STORAGE MANAGEMENT
        // ============================================
        
        function saveToStorage() {
            localStorage.setItem(STORAGE_KEYS.BROADCASTS, JSON.stringify(broadcasts));
            updateLastSaved();
            updateStorageStatus();
        }
        
        function autoSave() {
            saveToStorage();
            showNotification('Auto-saved all data', 'info', 2000);
        }
        
        function updateStorageStatus() {
            // Calculate storage usage
            let totalSize = 0;
            
            // Add broadcasts size
            const broadcastsString = JSON.stringify(broadcasts);
            totalSize += new Blob([broadcastsString]).size;
            
            // Add drafts size
            const draftsString = JSON.stringify(drafts);
            totalSize += new Blob([draftsString]).size;
            
            // Add exports size
            const exportsString = JSON.stringify(exports);
            totalSize += new Blob([exportsString]).size;
            
            // Convert to KB
            const sizeKB = (totalSize / 1024).toFixed(2);
            const maxSize = 5120; // 5MB in KB
            const percentage = Math.min((totalSize / (maxSize * 1024)) * 100, 100);
            
            // Update UI
            document.getElementById('storageFill').style.width = `${percentage}%`;
            document.getElementById('statStorage').textContent = `${sizeKB} KB`;
            document.getElementById('footerStorage').textContent = `${percentage.toFixed(1)}% used`;
            
            // Update status text
            let statusText;
            if (percentage < 50) {
                statusText = `${(100 - percentage).toFixed(0)}% Available`;
            } else if (percentage < 80) {
                statusText = `${(100 - percentage).toFixed(0)}% Available`;
            } else {
                statusText = `Warning: ${percentage.toFixed(0)}% Used`;
            }
            document.getElementById('storageStatus').textContent = statusText;
        }
        
        function updateStats() {
            const activeCount = broadcasts.filter(b => 
                b.status === 'active' && 
                (!b.expiry || b.expiry > Date.now())
            ).length;
            
            const expiredCount = broadcasts.filter(b => 
                b.expiry && b.expiry <= Date.now()
            ).length;
            
            document.getElementById('statTotal').textContent = broadcasts.length;
            document.getElementById('statActive').textContent = activeCount;
            document.getElementById('statDrafts').textContent = drafts.length;
            document.getElementById('statExpired').textContent = expiredCount;
            document.getElementById('footerBroadcasts').textContent = broadcasts.length;
        }
        
        function updateLastSaved() {
            const now = new Date();
            document.getElementById('lastSaved').textContent = now.toLocaleTimeString();
        }
        
        function updateCharCount() {
            const message = document.getElementById('broadcastMessage').value;
            document.getElementById('charCount').textContent = `${message.length}/2000`;
        }
        
        // ============================================
        // EXPORT/IMPORT FUNCTIONS
        // ============================================
        
        function exportToJSON() {
            const exportData = {
                broadcasts: broadcasts,
                drafts: drafts,
                exportedAt: new Date().toISOString(),
                version: '1.0'
            };
            
            const dataStr = JSON.stringify(exportData, null, 2);
            const dataBlob = new Blob([dataStr], {type: 'application/json'});
            
            // Create download link
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = `infocast-backup-${new Date().toISOString().split('T')[0]}.json`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            // Add to export history
            const exportRecord = {
                id: Date.now(),
                type: 'JSON',
                date: new Date().toISOString(),
                size: (dataBlob.size / 1024).toFixed(2) + ' KB'
            };
            exports.unshift(exportRecord);
            localStorage.setItem(STORAGE_KEYS.EXPORTS, JSON.stringify(exports));
            displayExportHistory();
            
            showNotification('Data exported as JSON file', 'success');
        }
        
        function exportToCSV() {
            // Convert broadcasts to CSV
            let csvContent = "ID,Title,Type,Urgency,Message,Tags,Timestamp,Expiry,Status\n";
            
            broadcasts.forEach(broadcast => {
                const row = [
                    broadcast.id,
                    `"${broadcast.title.replace(/"/g, '""')}"`,
                    broadcast.type,
                    broadcast.urgency,
                    `"${broadcast.message.replace(/"/g, '""').replace(/\n/g, ' ')}"`,
                    `"${broadcast.tags.join(',')}"`,
                    broadcast.timestamp,
                    broadcast.expiry || '',
                    broadcast.status
                ];
                csvContent += row.join(',') + '\n';
            });
            
            const dataBlob = new Blob([csvContent], {type: 'text/csv;charset=utf-8;'});
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = `infocast-broadcasts-${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            // Add to export history
            const exportRecord = {
                id: Date.now(),
                type: 'CSV',
                date: new Date().toISOString(),
                size: (dataBlob.size / 1024).toFixed(2) + ' KB'
            };
            exports.unshift(exportRecord);
            localStorage.setItem(STORAGE_KEYS.EXPORTS, JSON.stringify(exports));
            displayExportHistory();
            
            showNotification('Broadcasts exported as CSV file', 'success');
        }
        
        function importData(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            const reader = new FileReader();
            reader.onload = function(e) {
                try {
                    const data = JSON.parse(e.target.result);
                    
                    if (data.broadcasts && Array.isArray(data.broadcasts)) {
                        // Merge broadcasts (avoid duplicates by ID)
                        const existingIds = new Set(broadcasts.map(b => b.id));
                        const newBroadcasts = data.broadcasts.filter(b => !existingIds.has(b.id));
                        
                        broadcasts = [...newBroadcasts, ...broadcasts];
                        
                        // Merge drafts if available
                        if (data.drafts && Array.isArray(data.drafts)) {
                            const existingDraftIds = new Set(drafts.map(d => d.id));
                            const newDrafts = data.drafts.filter(d => !existingDraftIds.has(d.id));
                            drafts = [...newDrafts, ...drafts];
                        }
                        
                        saveToStorage();
                        displayBroadcasts();
                        updateStats();
                        
                        showNotification(`Imported ${newBroadcasts.length} broadcasts`, 'success');
                    } else {
                        throw new Error('Invalid file format');
                    }
                } catch (error) {
                    showNotification('Error importing file. Please check the format.', 'error');
                }
            };
            reader.readAsText(file);
            
            // Reset file input
            event.target.value = '';
        }
        
        function displayExportHistory() {
            const exportHistory = document.getElementById('exportHistory');
            
            if (exports.length === 0) {
                exportHistory.innerHTML = '<div style="color: #9ca3af; font-size: 14px; text-align: center;">No exports yet</div>';
                return;
            }
            
            exportHistory.innerHTML = exports.slice(0, 5).map(exp => `
                <div class="export-item">
                    <div>
                        <div class="export-name">${exp.type} Export</div>
                        <div class="export-date">${new Date(exp.date).toLocaleString()}</div>
                    </div>
                    <div style="color: #6b7280; font-size: 12px;">${exp.size}</div>
                </div>
            `).join('');
        }
        
        // ============================================
        // CLEANUP FUNCTIONS
        // ============================================
        
        function clearExpired() {
            if (!confirm('Clear all expired broadcasts?')) return;
            
            const expiredCount = broadcasts.filter(b => b.expiry && b.expiry <= Date.now()).length;
            broadcasts = broadcasts.filter(b => !(b.expiry && b.expiry <= Date.now()));
            
            saveToStorage();
            displayBroadcasts();
            updateStats();
            
            showNotification(`Cleared ${expiredCount} expired broadcasts`, 'success');
        }
        
        function clearDrafts() {
            if (!confirm('Clear all drafts? This cannot be undone.')) return;
            
            const draftCount = drafts.length;
            drafts = [];
            localStorage.setItem(STORAGE_KEYS.DRAFTS, JSON.stringify(drafts));
            
            displayBroadcasts();
            updateStats();
            
            showNotification(`Cleared ${draftCount} drafts`, 'success');
        }
        
        function clearAllData() {
            if (!confirm('WARNING: This will delete ALL data including broadcasts and drafts. Are you absolutely sure?')) return;
            
            broadcasts = [];
            drafts = [];
            exports = [];
            
            localStorage.removeItem(STORAGE_KEYS.BROADCASTS);
            localStorage.removeItem(STORAGE_KEYS.DRAFTS);
            localStorage.removeItem(STORAGE_KEYS.EXPORTS);
            
            displayBroadcasts();
            displayExportHistory();
            updateStats();
            updateStorageStatus();
            
            showNotification('All data cleared', 'success');
        }
        
        function checkExpiredBroadcasts() {
            let hasExpired = false;
            broadcasts.forEach(broadcast => {
                if (broadcast.expiry && broadcast.expiry <= Date.now() && broadcast.status === 'active') {
                    broadcast.status = 'expired';
                    hasExpired = true;
                }
            });
            
            if (hasExpired) {
                saveToStorage();
                displayBroadcasts();
                updateStats();
            }
        }
        
        // ============================================
        // HELPER FUNCTIONS
        // ============================================
        
        function showNotification(message, type = 'info', duration = 3000) {
            // Create notification element
            const notification = document.createElement('div');
            
            let bgColor, icon;
            switch(type) {
                case 'success':
                    bgColor = 'var(--success-color)';
                    icon = 'fas fa-check-circle';
                    break;
                case 'error':
                    bgColor = 'var(--danger-color)';
                    icon = 'fas fa-exclamation-circle';
                    break;
                default:
                    bgColor = 'var(--primary-color)';
                    icon = 'fas fa-info-circle';
            }
            
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: ${bgColor};
                color: white;
                padding: 15px 20px;
                border-radius: 10px;
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
                z-index: 1000;
                animation: slideIn 0.3s ease-out;
                max-width: 300px;
                display: flex;
                align-items: center;
                gap: 10px;
            `;
            notification.innerHTML = `<i class="${icon}"></i> ${message}`;
            
            document.body.appendChild(notification);
            
            // Remove after duration
            setTimeout(() => {
                notification.style.animation = 'slideIn 0.3s ease-out reverse';
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 300);
            }, duration);
        }
        
        function playAlertSound() {
            try {
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.value = 800;
                oscillator.type = 'sine';
                
                gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 1);
                
                oscillator.start(audioContext.currentTime);
                oscillator.stop(audioContext.currentTime + 1);
            } catch (e) {
                // Audio not supported
            }
        }
        
        // ============================================
        // DEMO DATA (for first-time users)
        // ============================================
        
        // Check if first time user
        if (!localStorage.getItem(STORAGE_KEYS.BROADCASTS) && broadcasts.length === 0) {
            // Add demo broadcasts
            broadcasts = [
                {
                    id: Date.now() - 10000,
